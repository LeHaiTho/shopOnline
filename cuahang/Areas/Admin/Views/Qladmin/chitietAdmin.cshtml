@using CuaHangOnline.Models
@using PagedList.Mvc
@model PagedList.PagedList<pADMIN>
@{
    ViewBag.Title = "chitietAdmin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Quản lý Admin</h6>
                <a href="@Url.Action("Themmoi","Qladmin")" class="btn btn-info mb-3" role="button">Thêm mới <i class="fa fa-plus text-white"></i></a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Mã</th>
                                <th scope="col">Ảnh</th>
                                <th scope="col">Họ tên</th>
                                <th scope="col">Tài khoản</th>
                                <th scope="col">Mật khẩu</th>
                                <th scope="col">Quyền</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                <tr>
                    <th scope="row">@item.MaAd</th>
                    <td><img src="~/Thuvien/img/@item.Anh" class="rounded-circle me-lg-2" style="height:45px;width:45px" /></td>
                    <td class="text-white">@item.HoTen</td>
                    <td class="text-danger">@item.TenDn</td>
                    <td class="text-white">@item.MatKhau</td>
                    <td class="text-white">@item.Quyen</td>
                    <td>

                        <a href="@Url.Action("SuaAdmin","Qladmin",new { maad=item.MaAd })" class="btn btn-warning" role="button"><i class="fa fa-wrench text-white"></i></a>
                        <a href="@Url.Action("XoaAdmin","Qladmin",new { maad=item.MaAd })" class="btn btn-danger" role="button"><i class="fa fa-trash text-white"></i></a>
                    </td>
                </tr>}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@*Tạo liên kết các trang*@
<div class="container">
    <i class="fa fa-bookmark text-primary"></i> Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    <div class="d-flex justify-content-center">
        @Html.PagedListPager(Model, page => Url.Action("chitietAdmin", new { page = page }))
    </div>
</div>

