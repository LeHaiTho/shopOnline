
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Dangky</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->

    <style type="text/css">
        .palel-primary {
            border-color: #bce8f1;
        }

        .panel-primary > .panel-heading {
            background: #bce8f1;
        }

        .panel-primary > .panel-body {
            background-color: #EDEDED;
        }
    </style>
</head>
<body>
    <br />
    <div class="row">
        <div class="col-md-6 col-sm-12 col-lg-6 col-md-offset-3">
            <div class="panel panel-warning text-dark">
                <div class="panel-heading">
                    NHẬP THÔNG TIN CHI TIẾT CỦA BẠN TẠI ĐÂY
                </div>
                <div class="panel-body">
                    <form name="myform" method="post">
                        <div class="form-group">
                            <label for="myName">Họ và tên *</label>
                            <input id="myName" name="myName" class="form-control" type="text" required>
                            <span id="error_name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Taikhoan">Tài khoản *</label>
                            <input id="Taikhoan" name="Taikhoan" class="form-control" type="text" required>
                            <span id="error_taikhoan" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Email">Email *</label>
                            <input id="Email" name="Email" class="form-control" type="email" required>
                            <span id="error_Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Matkhau">Mật khẩu *</label>
                            <input id="Matkhau" name="matkhau" class="form-control" type="password" min="1" required>
                            <span id="error_Matkhau" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="ngaysinh">Ngày sinh *</label>
                            <input type="date" name="ngaysinh" id="ngaysinh" class="form-control" required>
                            <span id="error_ngaysinh" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="gioitinh">Giới tính *</label>
                            <select name="gioitinh" id="gioitinh" class="form-control">
                                <option selected>Nam</option>
                                <option>Nữ</option>
                                <option>Khác</option>
                            </select>
                            <span id="error_gioitinh" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="sdt">Số điện thoại *</label>
                            <input type="text" id="sdt" name="sdt" class="form-control" required>
                            <span id="error_sdt" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="disc">Địa chỉ</label>
                            <textarea name="diachi" class="form-control" rows="3" required></textarea>
                        </div>
                        <div @*class="form-group"*@>
                            <div id="register-link" class="text-right">
                                <a href="@Url.Action("Dangnhap","User")" class="text-info">Đăng nhập |</a>
                                <a href="@Url.Action("Index","Home")" class="text-info">Quay lại trang chủ</a>
                            </div>
                        </div>
                        <button id="submit" type="submit" value="submit" class="btn btn-warning center">Đăng ký</button>

                    </form>

                </div>
            </div>
        </div>
    </div>
</body>
</html>
